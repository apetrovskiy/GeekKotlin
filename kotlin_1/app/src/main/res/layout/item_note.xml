<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    tools:backgroundTint="@android:color/holo_purple">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                    android:id="@+id/title"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/textview_forever_margin_end"
                    android:layout_marginStart="@dimen/textview_forever_margin_start"
                    android:layout_marginTop="@dimen/textview_forever_margin_top"
                    tools:text="@string/forever_text"/>

            <TextView
                    android:id="@+id/body"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/textview2_margin"
                    tools:text="@string/kotlin_motto"/>
    </LinearLayout>

</android.support.v7.widget.CardView>